@model PlovdivTournament.Web.Manage.Models.GalleryViewModel
@using PlovdivTournament.Web.Manage.Library.Helpers;
@{
    ViewBag.Title = "UploadVideo";
    Layout = "~/Areas/Manage/Views/Shared/Admin_Layout.cshtml";
}

<div id="UploadVideoWrap">
    @using (Html.BeginForm("UploadVideo", "Gallery", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        <p>
            <input type="file" id="fileUpload" name="VideoCover" size="23" />
        </p>
        <p>
            URL: @Html.TextBoxFor(x => x.VideoUrl)
        </p>
        <p>
            Caption: @Html.TextBoxFor(x => x.VideoTitle)
        </p>
        <p>
            Category: @Html.DropDownListFor(x => x.VideoCategory, SelectListHelper.GetCategories(Model.VideoCategory))
        </p>
        <p>Description: </p>
        @Html.TextAreaFor(x => x.VideoDescription)

        <p>
            <a href="#" onclick="get_form(this).submit(); return false">Upload</a>
        </p>
        <div class="clearfix">
        </div> 
    }
</div>	
<div class="clearfix"></div>