@model PlovdivTournament.Web.Models.MasterViewModel
<!DOCTYPE html>
<html>
<head>
	<title>@ViewBag.Title</title>
	<meta name="viewport" content="width=device-width" />
	<meta http-equiv="Content-Type" content="text/html"; charset="1251">
	<meta name="Content-Language" content="bg">
	<meta name="publisher" content="Idit">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<link rel="stylesheet" type="text/css" href="~/Resources/css/reset.css" />
	<link rel="stylesheet" type="text/css" href="~/Resources/css/style.css" />
	<script src="http://code.jquery.com/jquery-latest.min.js" type="text/javascript"></script>
	<script type="text/javascript">

		function get_form(element) {
			while (element) {
				element = element.parentNode
				if (element.tagName.toLowerCase() == "form") {
					
					return element
				}
			}
			return 0;
		}
   
	</script>
	<!--[if IE]>
		<script src="http://html5shiv.googlecode.com/svn/trunk/html5.js"></script>
	<![endif]-->
</head>
<body>
	<div id="wrapper">
		<header>
			<div class="logo">
				<a href="~/Home/Index"><img src="~/Resources/imgs/logo.png" alt="LOGO" /></a>
			</div>

			@Html.Partial("LoginPartialView", Model)

			<div class="clearfix"></div>
			<nav>
				<ul>
					<li><a href="#">Инфо</a>
						<ul>
							<li><a href="~/Info/Fest">Фестивал</a></li>
							<li><a href="~/Info/Program">Програма</a></li>
							<li><a href="~/Info/Referees">Жури</a></li>
							<li><a href="~/Info/Evaluation">Оценяване</a></li>
							<li><a href="~/Info/Taxes">Такси</a></li>
						</ul>
					</li>
					<li><a href="#">Категории</a>
						<ul>
							<li><a href="~/Categories/Styles">Стилове</a></li>
							<li><a href="~/Categories/Rules">Правила</a></li>
							
						</ul>
					</li>
					<li><a href="#">Регистрация</a></li>
					<li><a href="#">Галерия</a>
						<ul>
							<li><a href="~/Gallery/Videos">Видео</a></li>
							<li><a href="~/Gallery/Photos">Снимки</a></li>
						</ul>
					</li>
					<li><a href="#">Контакти</a></li>
				</ul>
			</nav>
			<div class="clearfix"></div>
			@Html.Partial("UserNavigationPartialView", Model)
		</header>
		<section id="content">
			<div>
				@RenderBody()
			</div>
		</section>
		<footer>
			<div class="logo">
				<img src="~/Resources/imgs/logo.png" alt="LOGO" />
			</div>
			<div id="SocialWrap">
				<a href="#"><img src="~/Resources/imgs/t.png" alt="LOGO" /></a>
				<a href="#"><img src="~/Resources/imgs/f.png" alt="LOGO" /></a>
				<a href="#"><img src="~/Resources/imgs/y.png" alt="LOGO" /></a>
			</div>
			<div class="clearfix"></div>
		</footer>
	</div>
</body>
</html>