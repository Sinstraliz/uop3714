@model PlovdivTournament.Web.Models.MasterViewModel
<!DOCTYPE html>
<html>
<head>
	<title>@ViewBag.Title</title>
	<meta name="viewport" content="width=device-width" />
	<meta http-equiv="Content-Type" content="text/html"; charset="1251">
	<meta name="Content-Language" content="bg">
	<meta name="publisher" content="Idit">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<link rel="stylesheet" type="text/css" href="~/Resources/css/reset.css" />
	<link rel="stylesheet" type="text/css" href="~/Resources/css/style.css" />
	<script src="http://code.jquery.com/jquery-latest.min.js" type="text/javascript"></script>
	<script type="text/javascript">
		function get_form(element) {
			while (element) {
				element = element.parentNode
				if (element.tagName.toLowerCase() == "form") {
					
					return element
				}
			}
			return 0;
		}

		$(function () {
		    $('#LanguageDropDown').change(function () {
		        $('#hidden_languageDropDown_page').val('@String.Format("{0}/{1}", HttpContext.Current.Request.RequestContext.RouteData.Values["controller"], HttpContext.Current.Request.RequestContext.RouteData.Values["action"])');
	            $('#LanguageDropDownForm').submit();
	        })
		});

	    if (document.layers) {
	        document.captureEvents(Event.KEYDOWN);
	    }

	    document.onkeydown = function (evt) {
	        var keyCode = evt ? (evt.which ? evt.which : evt.keyCode) : event.keyCode;
	        if (keyCode == 13) {
	            $("#loginButton").click();
	        }
	        if (keyCode == 27) {
	            // For Escape.
	            // Your function here.
	        } else {
	            return true;
	        }
	    };

	    function SetSelectedClubMembers() {
	        var hidden = $("#SelectedClubMemberHidden");
	        hidden.value = '';

	        var dropdowns = $(".MemberDropDownList");

	        for (var i = 0; i < dropdowns.length; i++) {
	            if (dropdowns[i].value != '') {
	                hidden.val(hidden.val() + ',' + dropdowns[i].value);
	            }
	        }
	    };
	</script>
	<!--[if IE]>
		<script src="http://html5shiv.googlecode.com/svn/trunk/html5.js"></script>
	<![endif]-->
</head>
<body>
	<div id="wrapper">
		<header>
			<div class="logo">
				<a href="/"><img src="~/Resources/imgs/logo.png" alt="LOGO" /></a>
			</div>
             <div class="LanguageDropDown">
                @using (Html.BeginForm("ChangeLanguage", "Master", FormMethod.Post, new { id = "LanguageDropDownForm" }))
                {
                    @Html.HiddenFor(x => x.Page, new { id = "hidden_languageDropDown_page"})
                    @Html.DropDownListFor(x => x.CurrentLanguage, new SelectList(Model.Cultures), new { id = "LanguageDropDown" })
                }
            </div>
            <div class="clearfix"></div>
			@Html.Partial("LoginPartialView", Model)
			<div class="clearfix"></div>
			<nav>
				<ul>
					<li><a href="#">Инфо</a>
						<ul>
							<li><a href="~/Info/Program">Програма</a></li>
							<li><a href="~/Info/Referees">Жури</a></li>
							<li><a href="~/Info/Evaluation">Оценяване</a></li>
							<li><a href="~/Info/Workshops">Семинари</a></li>
							<li><a href="~/Info/Prizes">Награди</a></li>
							<li><a href="~/Info/Accommodation">Настаняване</a></li>
							<li><a href="~/Info/Results">Резултати</a></li>
						</ul>
					</li>
					<li><a href="#">Категории</a>
						<ul>
							<li><a href="~/Info/Styles">Стилове</a></li>
							<li><a href="~/Info/Rules">Правила</a></li>
						</ul>
					</li>
					<li><a href="~/Register/Index">Регистрация</a></li>
					<li><a href="#">Галерия</a>
						<ul>
							<li><a href="~/Gallery/Videos">Видео</a></li>
							<li><a href="~/Gallery/Photos">Снимки</a></li>
						</ul>
					</li>
					<li><a href="~/Info/Regulations">Регламент</a></li>
					<li><a href="~/Info/Taxes">Такси</a></li>
					<li><a href="~/Info/AboutUs">Контакти</a></li>
				</ul>
			</nav>
			<div class="clearfix"></div>
			@Html.Partial("UserNavigationPartialView", Model)
		</header>
		<section id="content">
			<div>
				@RenderBody()
			</div>
		</section>
		<footer>
			<div class="logo">
				<img src="~/Resources/imgs/logo.png" alt="LOGO" />
			</div>
			<div id="SocialWrap">
				<a href="#"><img src="~/Resources/imgs/f.png" alt="LOGO" /></a>
				<a href="#"><img src="~/Resources/imgs/y.png" alt="LOGO" /></a>
			</div>
			<div class="clearfix"></div>
		</footer>
	</div>
</body>
</html>