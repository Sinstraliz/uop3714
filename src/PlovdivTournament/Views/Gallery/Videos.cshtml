@model PlovdivTournament.Web.Models.GalleryViewModel
@{
	ViewBag.Title = "Gallery";
	Layout = "~/Views/Shared/Site_Layout.cshtml";
}

@Html.Partial("/Views/Gallery/PartialViews/CategoryNavigationPartialView.cshtml", Model)

<div id="column1">
	@for (int i = 0; i <= 3; i++)
	{
		int index = 3 * i;
		if (Model.AllVideos != null && Model.AllVideos.Count - 1 >= index)
		{
			string src = String.Format("/Gallery/GetVideoCover/{0}?&width={1}&maxheight={2}", Model.AllVideos[index].Id, 200, 133);

		<div class="pict">
			<div class="show">
				<div class="Caption">
					@Model.AllVideos[index].Title
				</div>
				<div class="clearfix">
				</div>
			</div>
			<a href="/Gallery/Preview/?id=@Model.AllVideos[index].Id.ToString()&type=@typeof(PlovdivTournament.Entities.Entity.Video)">
				<img src="@src" alt="VIDEO" />
			</a>
		</div>
		}
	}
</div>
